# =============================================================================
# A.B.E.L. BACKEND CONFIGURATION
# =============================================================================
# CRITICAL: Never commit .env files to git!
# Copy this file to .env and fill in your values
#
# RAILWAY DEPLOYMENT: Set these as environment variables in Railway dashboard
# =============================================================================

# -----------------------------------------------------------------------------
# APP SETTINGS
# -----------------------------------------------------------------------------
APP_NAME=ABEL
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# SERVER (Railway sets PORT automatically)
# -----------------------------------------------------------------------------
HOST=0.0.0.0
# PORT=8000  # Railway injects this automatically

# -----------------------------------------------------------------------------
# SECURITY (CRITICAL)
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-min-32-chars-here-change-me

# For mobile apps, use "*" to allow all origins
CORS_ORIGINS=*
TRUSTED_HOSTS=*

# Rate limiting
RATE_LIMIT_ENABLED=true

# -----------------------------------------------------------------------------
# SUPABASE
# -----------------------------------------------------------------------------
SUPABASE_URL=https://itgloukhclznuuqjfzuk.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# -----------------------------------------------------------------------------
# GOOGLE GEMINI
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_CHAT=gemini-1.5-flash
GEMINI_MODEL_VISION=gemini-1.5-pro

# -----------------------------------------------------------------------------
# EXTERNAL APIS (Optional - for Tools)
# -----------------------------------------------------------------------------
OPENWEATHER_API_KEY=
NEWS_API_KEY=

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_FORMAT=json
LOG_PII_REDACTION=true
