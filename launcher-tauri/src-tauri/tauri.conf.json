{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ABEL Launcher",
  "version": "2.0.0",
  "identifier": "com.abel.launcher",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "A.B.E.L // SYSTEM INTERFACE",
        "width": 700,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "docker-compose",
          "cmd": "docker-compose",
          "args": true
        }
      ]
    },
    "opener": {
      "openUrl": {
        "urls": true
      }
    }
  }
}
